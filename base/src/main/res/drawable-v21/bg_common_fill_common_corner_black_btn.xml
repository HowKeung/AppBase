<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_primary_text_highlight">

    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="@color/color_primary_btn_enable" />
                </shape>

            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_primary_switch_background" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>