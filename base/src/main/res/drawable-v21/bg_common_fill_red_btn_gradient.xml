<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_primary_red_focusable">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_primary_btn_enable" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#DB3F36" />
                    <gradient
                        android:angle="180"
                        android:endColor="#E94626"
                        android:startColor="#DB3F36" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>