<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_background" />
            <stroke android:width="1px" android:color="@color/color_primary_edit_focusable" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_background" />
            <stroke android:width="1px" android:color="@color/color_primary_edit_focusable" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_background" />
            <stroke android:width="1px" android:color="@color/color_primary_edit_enable" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_background" />
            <stroke android:width="1px" android:color="@color/color_primary_red_normal" />
        </shape>
    </item>

</selector>