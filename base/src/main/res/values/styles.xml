<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary_background</item><!-- 导航栏颜色 -->
        <item name="colorPrimaryDark">@color/color_primary_background</item><!-- 通知栏颜色 -->
        <item name="colorAccent">@color/color_primary_background</item><!-- 控件选中后颜色 -->
        <item name="actionMenuTextColor">@color/color_primary_text_highlight</item>
        <item name="android:textColorPrimary">@color/color_primary_text_highlight</item>
        <item name="android:windowAnimationStyle">@style/Base.Activity.Animation</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/Base.OverflowMenuStyle</item>
        <item name="colorControlNormal">@color/color_primary_text_highlight
        </item><!-- Toolbar返回按钮颜色 -->
    </style>

    <!-- Activity 切换动画 -->
    <style name="Base.Activity.Animation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="Base.AppThemeFullScreen" parent="Base.AppTheme">
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>

